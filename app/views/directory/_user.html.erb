<% location = user.location %>
<div class="user card <%= location.present? ? 'card-with-map' : '' %>">
  <div class="avatar">
    <img src="<%= user.gravatar_url(100) %>" />
  </div>
  <span class="status"><%= user.gtalk_status %></span>
  <div class="details">
    <p class="name"><%= user.name %></p>
    <p class="info">
      <span class="role"><%= user.role %></span>
      <span class="email"><a href="mailto:<%= user.email %>"><%= user.email %></a></span>
    </p>
    <p class="hours"><%= display_hour user.start_work_hour || 9 %> to <%= display_hour user.end_work_hour || 17 %></p>
  </div>
  <% if location.present? %>
    <p><%= render partial: "map", locals: { user: user, location: location } %></p>
  <% end %>
</div>
